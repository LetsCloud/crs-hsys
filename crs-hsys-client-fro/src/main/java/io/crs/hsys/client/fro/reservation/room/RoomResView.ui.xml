<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:combobox="urn:import:gwt.material.design.addins.client.combobox"
	xmlns:rp="urn:import:io.crs.hsys.client.fro.reservation.room">

	<ui:style>
	.mainPanel {
		background: #f5f5f5;
	}
	
	.dataGroupBox {
		margin-top: 8px;
		margin-bottom: 8px;
		padding-left: 10px;
		border-left: 3px solid #607d8b;
	}
	
	.dataGroupTitle {
		color: #607d8b;
		float: left;
	}
	
	/* Add CSS here. See the GWT docs on UI Binder for more details */
	.textAlignRight {
		text-align: right;
	}
	
	.striped {
		background-color: #f5f5f5;
	}
	
	.marginTop0 {
		margin-top: 0px;
	}
	
	.padding0 {
		padding: 0px;
	}
	</ui:style>

	<g:HTMLPanel>
		<m:MaterialRow marginBottom="0">
			<m:MaterialColumn grid="s12 xl6" paddingLeft="0"
				paddingRight="0">
				<!-- <combobox:MaterialComboBox label="Szobatípus" grid="s4"> <m:html.Option 
					value="DBLB" text="DBLB" /> <m:html.Option value="TWIN" text="TWIN" /> <m:html.Option 
					value="SNGL" text="SNGL" /> </combobox:MaterialComboBox> <m:MaterialIntegerBox 
					ui:field="qt" label="Mennyi" placeholder="Mennyi" grid="s4" /> <combobox:MaterialComboBox 
					label="Szoba#" grid="s4"> <m:html.Option value="DBLB" text="1001" /> <m:html.Option 
					value="TWIN" text="1002" /> <m:html.Option value="SNGL" text="1003" /> </combobox:MaterialComboBox> -->
				<m:MaterialRow marginBottom="0"
					addStyleNames="dataGroupBox">
					<m:MaterialRow marginBottom="0">
						<m:MaterialColumn grid="s6">
							<m:MaterialLabel text="Szobafoglalás"
								addStyleNames="dataGroupTitle" />
							<!-- <m:MaterialButton margin="8" type="FLOATING" waves="LIGHT" backgroundColor="AMBER" 
								iconType="EDIT" float="RIGHT" /> -->
						</m:MaterialColumn>
						<m:MaterialColumn grid="s6">
							<m:MaterialIcon iconType="HOTEL" float="RIGHT" />
							<m:MaterialLabel text="Lakó"
								addStyleNames="dataGroupTitle" float="RIGHT" />
						</m:MaterialColumn>
					</m:MaterialRow>

					<m:MaterialRow marginBottom="10"
						backgroundColor="GREY_LIGHTEN_4">
						<rp:ValueDisplay ui:field="arrivalDisplay"
							iconType="FLIGHT_LAND" iconColor="GREEN" label="Érkezés"
							text="2019.08.16." subText="pén" badgeText="KORAI"
							badgeBackground="GREEN" badgeColor="WHITE" grid="s12 m6 xl12" />

						<rp:ValueDisplay ui:field="departurelDisplay"
							iconType="ARROW_UPWARD" iconColor="GREY" label="Kiköltözés"
							text="2019.08.22." subText="csü" grid="s12 m6 xl12" />

						<rp:ValueDisplay ui:field="roomDisplay"
							iconType="HOTEL" iconColor="BLUE" label="Szoba" text="1055"
							subText="DBLB" badgeText="FIX" badgeBackground="BLUE"
							badgeColor="WHITE" grid="s12 m6 xl12" />

						<rp:ValueDisplay ui:field="guestDisplay"
							iconType="GROUP" iconColor="GREY" label="Vendég létszám"
							text="2 / 1 / 0 / 0" grid="s12 m6 xl12" />
					</m:MaterialRow>

					<m:MaterialRow marginBottom="10"
						backgroundColor="GREY_LIGHTEN_4">
						<rp:ValueDisplay ui:field="arrivalDisplay2"
							iconType="ARROW_DOWNWARD" iconColor="GREY" label="Beköltözés"
							text="2019.08.16." subText="pén" grid="s12 m6 xl12" />

						<rp:ValueDisplay ui:field="departurelDisplay2"
							iconType="FLIGHT_TAKEOFF" iconColor="RED" label="Utazás"
							text="2019.08.22." subText="csü" badgeText="KÉSŐI"
							badgeBackground="RED" badgeColor="WHITE" grid="s12 m6 xl12" />

						<rp:ValueDisplay ui:field="roomDisplay2"
							iconType="HOTEL" iconColor="BLUE" label="Szoba" text="1055"
							subText="DBLB" badgeText="FIX" badgeBackground="BLUE"
							badgeColor="WHITE" grid="s12 m6 xl12" />

						<rp:ValueDisplay ui:field="guestDisplay2"
							iconType="GROUP" iconColor="GREY" label="Vendég létszám"
							text="2 / 1 / 0 / 0" grid="s12 m6 xl12" />
					</m:MaterialRow>
				</m:MaterialRow>
			</m:MaterialColumn>

			<m:MaterialColumn grid="s12 xl6" paddingLeft="0"
				paddingRight="0" addStyleNames="dataGroupBox">
				<m:MaterialRow marginBottom="0">
					<m:MaterialLabel text="Szobaárak" marginBottom="10"
						addStyleNames="dataGroupTitle" grid="s12" />
				</m:MaterialRow>
				<m:MaterialRow>
					<rp:RatePanel3 enableArrival="true" />
					<rp:RatePanel3 enableDeparture="true" />
				</m:MaterialRow>
			</m:MaterialColumn>

			<m:MaterialColumn grid="s12 xl6" paddingLeft="0"
				paddingRight="0">
				<m:MaterialRow marginBottom="0">
					<m:MaterialCheckBox text="Átterhelés"
						value="true" grid="s6" />

					<m:MaterialCheckBox text="Árkód szobára"
						value="true" grid="s6" />
					<m:MaterialCheckBox text="IFA szobára"
						value="true" grid="s6" />
				</m:MaterialRow>
			</m:MaterialColumn>
		</m:MaterialRow>


		<m:MaterialRow>
			<m:MaterialColumn grid="s12 xl6" paddingLeft="0"
				paddingRight="0">
				<m:MaterialRow>
				</m:MaterialRow>
			</m:MaterialColumn>

			<m:MaterialColumn grid="s12 xl6" paddingLeft="0"
				paddingRight="0">
				<m:MaterialRow>
					<combobox:MaterialComboBox
						label="Bekészítés" placeholder="Válassz bekészítést" grid="s12"
						closeOnSelect="false" multiple="true">
						<m:html.Option value="DBLB" text="Gyümölcskosár" />
						<m:html.Option value="TWIN" text="Köntös" />
						<m:html.Option value="SNGL" text="Pezsgő" />
						<m:html.Option value="SNGL" text="Bonbon" />
					</combobox:MaterialComboBox>

					<m:MaterialTextBox label="Megjegyzés"
						value="Érkezéskor fizet" grid="s12" />

				</m:MaterialRow>
			</m:MaterialColumn>
		</m:MaterialRow>

		<m:MaterialFAB>
			<m:MaterialTooltip text="Rezervációs műveletek"
				position="LEFT">
				<m:MaterialAnchorButton type="FLOATING"
					iconType="MORE_VERT" size="LARGE" />
			</m:MaterialTooltip>
			<m:MaterialFABList>
				<m:MaterialTooltip text="Módosítás"
					position="LEFT">
					<m:MaterialAnchorButton type="FLOATING"
						waves="LIGHT" backgroundColor="YELLOW" iconType="EDIT" />
				</m:MaterialTooltip>
				<m:MaterialTooltip text="Napi szobaár"
					position="LEFT">
					<m:MaterialAnchorButton type="FLOATING"
						waves="LIGHT" backgroundColor="LIME" iconType="TRANSFORM" />
				</m:MaterialTooltip>
				<m:MaterialTooltip text="Visszaigazolás"
					position="LEFT">
					<m:MaterialAnchorButton type="FLOATING"
						waves="LIGHT" backgroundColor="CYAN" iconType="MAIL" />
				</m:MaterialTooltip>
				<m:MaterialTooltip text="Check-IN" position="LEFT">
					<m:MaterialAnchorButton ui:field="checkin"
						type="FLOATING" waves="LIGHT" backgroundColor="GREEN"
						iconType="FLIGHT_LAND" />
				</m:MaterialTooltip>
				<m:MaterialTooltip text="Kulcskártya"
					position="LEFT">
					<m:MaterialAnchorButton type="FLOATING"
						waves="LIGHT" backgroundColor="BLUE" iconType="VPN_KEY" />
				</m:MaterialTooltip>
				<m:MaterialTooltip text="Költöztetés"
					position="LEFT">
					<m:MaterialAnchorButton type="FLOATING"
						waves="LIGHT" backgroundColor="YELLOW"
						iconType="ROTATE_90_DEGREES_CCW" />
				</m:MaterialTooltip>
				<m:MaterialTooltip text="Lemondás" position="LEFT">
					<m:MaterialAnchorButton type="FLOATING"
						waves="LIGHT" backgroundColor="RED" iconType="CANCEL" />
				</m:MaterialTooltip>
			</m:MaterialFABList>
		</m:MaterialFAB>
	</g:HTMLPanel>
</ui:UiBinder> 