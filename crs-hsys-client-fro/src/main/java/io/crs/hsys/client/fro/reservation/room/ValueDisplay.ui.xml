<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">

	<ui:style>
	/* Add CSS here. See the GWT docs on UI Binder for more details */
	.panelBase {
		position: relative;
		min-height: 80px;
	}
	
	.iconBase {
		position: absolute;
		top: 30px;
		font-size: 30px;
	}
	
	.linkBase {
		position: absolute;
		margin-left: 35px;
		top: 20px;
	}
	
	.labelBase {
		position: absolute;
		margin-left: 35px;
		color: #9e9e9e;
	}
	
	.title {
		display: inline;
		font-size: 32px;
		color: #616161;
	}
	
	.subTitle {
		display: inline;
		margin-left: 10px;
	}
	
	.badge {
		display: inline;
		padding-right: 2px;
		padding-left: 2px;
		border-radius: 3px;
		margin-left: 10px;
	}
	</ui:style>

	<m:MaterialPanel ui:field="panel"
		addStyleNames="{style.panelBase}">
		<m:MaterialIcon ui:field="icon"
			addStyleNames="{style.iconBase}">
		</m:MaterialIcon>
		<m:MaterialPanel addStyleNames="{style.linkBase}">
			<m:MaterialLabel ui:field="title"
				addStyleNames="{style.title}" />
			<m:MaterialLabel ui:field="subTitle"
				addStyleNames="{style.subTitle}" />
			<m:MaterialLabel ui:field="badge"
				addStyleNames="{style.badge}" />
		</m:MaterialPanel>
		<m:MaterialLabel ui:field="label"
			addStyleNames="{style.labelBase}">
		</m:MaterialLabel>
	</m:MaterialPanel>
</ui:UiBinder> 