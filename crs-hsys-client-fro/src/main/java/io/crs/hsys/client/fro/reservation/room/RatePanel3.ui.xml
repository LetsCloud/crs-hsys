<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">

	<ui:style>
	.badge {
		padding-right: 2px;
		padding-left: 2px;
		border-radius: 3px;
		margin-left: 10px;
		font-size: 10px;
		font-weight: bold;
		width: fit-content;
	}
	</ui:style>

	<m:MaterialColumn grid="s12 m6 l6 xl6"
		marginBottom="10">
		<m:MaterialRow backgroundColor="GREY_LIGHTEN_4"
			marginBottom="0">
			<m:MaterialColumn grid="s6">
				<m:MaterialLabel text="08.16" float="LEFT" />
				<m:MaterialIcon ui:field="arrivalIcon"
					iconType="FLIGHT_LAND" iconColor="GREEN" float="LEFT"
					marginLeft="10" />
			</m:MaterialColumn>
			<m:MaterialColumn grid="s6">
				<m:MaterialLabel text="08.22" float="RIGHT" />
				<m:MaterialIcon ui:field="departureIcon"
					iconType="FLIGHT_TAKEOFF" iconColor="RED" float="RIGHT"
					marginRight="10" />
			</m:MaterialColumn>
		</m:MaterialRow>
		<m:MaterialRow backgroundColor="GREY_LIGHTEN_4"
			marginBottom="0">
			<m:MaterialColumn grid="s7">
				<m:MaterialLabel ui:field="rateCodeLabel"
					text="NONREF" display="INLINE" />
				<m:MaterialLabel ui:field="rateTerLabel"
					text="SZOBÁRA" addStyleNames="{style.badge}"
					backgroundColor="ORANGE" textColor="WHITE" display="INLINE" />
			</m:MaterialColumn>
			<m:MaterialColumn grid="s5">
				<m:MaterialLabel text="EUR" float="RIGHT" />
				<m:MaterialLabel ui:field="rateLabel" text="160"
					float="RIGHT" />
			</m:MaterialColumn>
		</m:MaterialRow>
		<m:MaterialRow backgroundColor="GREY_LIGHTEN_4" marginBottom="0">
			<m:MaterialColumn grid="s12">
				<m:MaterialLabel ui:field="ifaModLabel"
					text="IFA beleérteve" display="INLINE" />
				<m:MaterialLabel ui:field="ifaTerLabel"
					text="FŐSZÁMLÁRA" addStyleNames="{style.badge}"
					backgroundColor="PURPLE" textColor="WHITE" display="INLINE" />
			</m:MaterialColumn>
		</m:MaterialRow>
	</m:MaterialColumn>
</ui:UiBinder> 