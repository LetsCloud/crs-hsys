<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">

	<ui:style>
	.col {
		margin-left: auto;
		left: auto;
		right: auto;
	}
	
	.block {
		display: block;
		padding: 10px;
		font-size: 16px !important;
		height: 70px;
		overflow: hidden;
	}
	</ui:style>

	<m:MaterialColumn ui:field="materialColumn"
		addStyleNames="{style.col}"> <!-- grid="l2 m3 s6" -->
		<m:MaterialCard ui:field="materialCard">
			<m:MaterialLabel ui:field="cardTitle" textColor="GREY_DARKEN_3"
				addStyleNames="{style.block}" />
			<!-- <m:MaterialCardTitle ui:field="cardTitle" iconType="MORE_VERT" iconPosition="RIGHT" 
				textColor="BLACK" addStyleNames="{style.block}" /> -->

			<m:MaterialCardContent ui:field="cardContent"
				addStyleNames="no-padding">
			</m:MaterialCardContent>
			<!-- <m:MaterialCardReveal> <m:MaterialCardTitle ui:field="revealTitle" 
				iconType="CLOSE" iconPosition="RIGHT" textColor="BLACK" /> </m:MaterialCardReveal> -->
		</m:MaterialCard>
	</m:MaterialColumn>
</ui:UiBinder> 