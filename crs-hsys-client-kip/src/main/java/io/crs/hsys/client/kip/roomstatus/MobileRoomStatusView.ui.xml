<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:mph="urn:import:io.crs.hsys.client.core.ui.panelheader" xmlns:list="urn:import:io.crs.hsys.client.core.ui.table">

	<ui:style>
	/* Add CSS here. See the GWT docs on UI Binder for more details */
	.paddingLR0 {
		padding-left: 0 !important;
		padding-right: 0 !important;
	}
	</ui:style>

	<m:MaterialRow>
		<m:MaterialColumn grid="s12" addStyleNames="{style.paddingLR0}">
			<m:MaterialTab ui:field="tab" backgroundColor="ORANGE"
				indicatorColor="BLUE">
				<m:MaterialTabItem waves="YELLOW" grid="s6">
					<m:MaterialLink text="Szobák" href="#tab1"
						textColor="WHITE" />
				</m:MaterialTabItem>
				<m:MaterialTabItem waves="YELLOW" grid="s6">
					<m:MaterialLink text="Szűrők" href="#tab2"
						textColor="WHITE" />
				</m:MaterialTabItem>
			</m:MaterialTab>
		</m:MaterialColumn>

		<m:MaterialColumn ui:field="col1" m:id="tab1" grid="s12"
			addStyleNames="{style.paddingLR0}" />

		<m:MaterialColumn ui:field="col2" m:id="tab2" grid="s12"
			addStyleNames="{style.paddingLR0}" />
	</m:MaterialRow>
</ui:UiBinder> 