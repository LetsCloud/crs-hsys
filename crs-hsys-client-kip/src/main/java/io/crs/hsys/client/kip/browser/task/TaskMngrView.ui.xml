<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:kip.ui="urn:import:io.crs.hsys.client.kip.ui">

	<ui:style>
	/* Add CSS here. See the GWT docs on UI Binder for more details */
	.contentPanel {
		margin-left: 10px;
		margin-right: 10px;
		padding-top: 15px;
		padding-bottom: 10px;
	}
	
	.filterPanel {
		margin-left: 24px;
		margin-right: 24px;
	}
	</ui:style>

	<m:MaterialPanel addStyleNames="{style.contentPanel}">
		<g:SimplePanel ui:field="filterPanel"
			addStyleNames="{style.filterPanel}" />
		<!-- Add GWT widgets here. Enter < and hit Ctrl-Space to auto-complete 
			widget names. The ui:field attribute binds an element to a field in the owner 
			class. See the GWT docs on UI Binder for more details. -->
		<m:MaterialCollapsible ui:field="collapsible"
			type="POPOUT" />

		<m:MaterialFAB>
			<m:MaterialButton ui:field="addButton"
				type="FLOATING" backgroundColor="BLUE" iconType="ADD" size="LARGE" />
		</m:MaterialFAB>

	</m:MaterialPanel>
</ui:UiBinder> 