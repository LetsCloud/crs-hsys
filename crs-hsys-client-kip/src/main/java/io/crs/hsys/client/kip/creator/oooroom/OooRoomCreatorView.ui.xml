<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:combobox="urn:import:gwt.material.design.addins.client.combobox"
	xmlns:ma="urn:import:gwt.material.design.addins.client"
	xmlns:tasktypeeditor="urn:import:io.crs.hsys.client.kip.editor.tasktype"
	xmlns:addext="urn:import:gwt.material.design.addext.client.ui">

	<ui:style>
	.pp {
		padding-top: 20px;
		padding-bottom: 8px;
		margin-left: 10px;
		margin-right: 10px;
	}
	
	.todoBox {
		border-top: none;
		border-left: 3px solid #2196f3;
		border-right: none;
		border-bottom: none;
		box-shadow: none !important;
	}
	
	.saveButton {
		margin-bottom: 18px;
	}
	</ui:style>

	<ui:with field="i18nCore"
		type="io.crs.hsys.client.core.i18n.CoreMessages" />

	<ui:with field="i18n"
		type="io.crs.hsys.client.kip.i18n.KipMessages" />

	<ui:with field="coreTokens"
		type="io.crs.hsys.client.core.CoreNameTokens" />

	<g:HTMLPanel addStyleNames="{style.pp}">
		<m:MaterialRow>
			<m:MaterialColumn grid="s12 m6">
				<g:HTMLPanel addStyleNames="dataGroupBox">
					<m:MaterialLabel text="Szoba választó"
						marginBottom="10" addStyleNames="dataGroupTitle" />

					<combobox:MaterialComboBox
						ui:field="roomFilterComboBox" multiple="true"
						label="{i18n.oooRoomCreatorRoomLabel}"
						placeholder="{i18n.oooRoomCreatorRoomPlaceholder}" marginTop="15"
						marginBottom="30" closeOnSelect="false" />

					<m:MaterialRow marginLeft="-10" marginRight="-10">
						<m:MaterialTextBox ui:field="fromRoom"
							type="TEXT" label="Szobaszámtól" grid="s4" />

						<m:MaterialTextBox ui:field="toRoom" type="TEXT"
							label="Szobaszámig" grid="s4" />

						<m:MaterialTextBox ui:field="floor" type="TEXT"
							label="Emelet" grid="s4" />
					</m:MaterialRow>

					<combobox:MaterialComboBox
						ui:field="roomTypeFilterComboBox" multiple="true"
						label="Szoba típusok választása" placeholder="Válassz típusokat"
						marginTop="15" marginBottom="30" closeOnSelect="false" />

					<combobox:MaterialComboBox
						ui:field="roomStatusFilterComboBox" multiple="true"
						label="{i18n.oooRoomCreatorRoomStatusLabel}"
						placeholder="{i18n.oooRoomCreatorRoomStautsPlaceholder}"
						marginTop="15" marginBottom="30" closeOnSelect="false" />
				</g:HTMLPanel>
			</m:MaterialColumn>

			<m:MaterialColumn grid="s12 m6">
				<m:MaterialDatePicker ui:field="fromDate"
					placeholder="{i18n.oooRoomEditorFromDateLabel}" autoClose="true" />

				<m:MaterialDatePicker ui:field="toDate"
					placeholder="{i18n.oooRoomEditorToDateLabel}" autoClose="true" />

				<combobox:MaterialComboBox
					ui:field="returnWhenComboBox" multiple="false"
					label="{i18n.oooRoomEditorReturnWhenLabel}"
					placeholder="{i18n.oooRoomEditorReturnWhenPlaceholder}"
					marginTop="15" marginBottom="30" />

				<combobox:MaterialComboBox
					ui:field="roomStatusComboBox" multiple="false"
					label="{i18n.oooRoomEditorReturnAsLabel}"
					placeholder="{i18n.oooRoomEditorReturnAsPlaceholder}"
					marginTop="15" marginBottom="30" />

				<m:MaterialTextArea ui:field="remarks"
					label="{i18n.oooRoomEditorRemarksLabel}" resizeRule="AUTO"
					marginTop="30" />
			</m:MaterialColumn>
		</m:MaterialRow>

		<m:MaterialButton ui:field="saveButton"
			iconType="SAVE" text="{i18nCore.comSave}" float="RIGHT"
			addStyleNames="{style.saveButton}" />
		<m:MaterialButton ui:field="cancelButton"
			text="{i18nCore.comCancel}" type="FLAT" float="RIGHT" />
	</g:HTMLPanel>
</ui:UiBinder>