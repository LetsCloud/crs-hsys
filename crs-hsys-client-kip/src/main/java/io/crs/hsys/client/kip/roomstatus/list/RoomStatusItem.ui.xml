<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client" xmlns:list="urn:import:io.crs.hsys.client.core.ui.table">

	<ui:style>
	/* Add CSS here. See the GWT docs on UI Binder for more details */
	.firstColumn {
		width: 150px;
		vertical-align: middle;
	}
	</ui:style>

	<list:MaterialListItem addStyleNames="col s12 m12 l6">
		<list:MaterialListItemColumn
			addStyleNames="{style.firstColumn}">
			<m:MaterialChip ui:field="code" letter="Ok"
				letterColor="WHITE" letterBackgroundColor="RED" />
		</list:MaterialListItemColumn>

		<list:MaterialListItemColumn>
			<m:MaterialLabel ui:field="floor" fontSize="1.4em" />
		</list:MaterialListItemColumn>

		<list:MaterialListItemColumn>
			<m:MaterialLabel ui:field="roomTypeCode" fontSize="1.4em" />
		</list:MaterialListItemColumn>

		<list:MaterialListItemColumn>
			<m:MaterialIcon ui:field="changeIcon" iconType="BRUSH" iconColor="ORANGE"
				waves="DEFAULT" circle="true" />
		</list:MaterialListItemColumn>
	</list:MaterialListItem>
</ui:UiBinder> 