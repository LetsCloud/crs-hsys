<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:m.html="urn:import:gwt.material.design.client.ui.html">

	<ui:style>
	/* Add CSS here. See the GWT docs on UI Binder for more details */
	</ui:style>

	<m:MaterialCollectionItem ui:field="collectionItem"
		type="AVATAR">
		<m:MaterialImage ui:field="senderImage" type="CIRCLE" />
		<m:MaterialLabel ui:field="senderLabel" fontSize="1.5em" />
		<m:MaterialLabel ui:field="createdLabel" fontSize="0.8em" />
		<m:MaterialLabel ui:field="messageLabel" />
		<m:MaterialCollectionSecondary>
			<m:MaterialIcon ui:field="chatIcon" iconType="CHAT" />
		</m:MaterialCollectionSecondary>
	</m:MaterialCollectionItem>
</ui:UiBinder> 