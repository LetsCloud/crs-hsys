<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client"
	xmlns:m.html="urn:import:gwt.material.design.client.ui.html"
	xmlns:m.ext="urn:import:gwt.material.design.addext.client.ui">

	<ui:style gss="true">
	/* Add CSS here. See the GWT docs on UI Binder for more details */
	.header {
		display: flow-root;
	}
	
	.statusIcon {
		font-size: 50px;
	}
	
	.roomNo {
		vertical-align: super;
	}
	
	.taskList {
		margin-left: auto;
		margin-right: auto;
	}
	
	@media screen and (min-width: 600px) {
		.taskList {
			width: 600px;
		}
	}
	</ui:style>

	<g:HTMLPanel>
		<ma:overlay.MaterialOverlay
			ui:field="overlay" textAlign="CENTER">

			<m.html:Div addStyleNames="{style.header}">
				<m:MaterialButton ui:field="btnClose" float="LEFT"
					iconColor="GREY_DARKEN_3" waves="DEFAULT"
					iconType="KEYBOARD_ARROW_LEFT" type="FLAT" iconPosition="LEFT" />
			</m.html:Div>

			<m:MaterialRow textAlign="CENTER" marginBottom="0">
				<m:MaterialIcon ui:field="statusIcon"
					addStyleNames="{style.statusIcon}" />
				<g:InlineLabel ui:field="roomNoLabel"
					addStyleNames="{style.statusIcon} {style.roomNo}" />
			</m:MaterialRow>

			<m:MaterialCollection ui:field="collection"
				addStyleNames="{style.taskList}" />

			<m:MaterialRow textAlign="CENTER">
				<m.ext:MaterialButton2 ui:field="dirtyButton"
					iconType="DELETE" textColor="GREY_DARKEN_3"
					iconColor="RED_LIGHTEN_2" backgroundColor="WHITE" visible="false"
					text="Piszkos" type="OUTLINED" />

				<m.ext:MaterialButton2 ui:field="cleanButton"
					iconType="STAR" iconColor="BLUE_LIGHTEN_2"
					backgroundColor="WHITE" visible="false" text="Tiszta"
					type="OUTLINED" textColor="GREY_DARKEN_3" />

				<m.ext:MaterialButton2
					ui:field="inspectButton" iconType="DONE_ALL"
					iconColor="GREEN_LIGHTEN_2" backgroundColor="WHITE" visible="false"
					text="Rendben" type="OUTLINED" textColor="GREY_DARKEN_3" />

				<m.ext:MaterialButton2
					ui:field="minibarButton" iconType="KITCHEN"
					iconColor="INDIGO_LIGHTEN_2" backgroundColor="WHITE"
					visible="false" text="MinibÃ¡r" type="OUTLINED"
					textColor="GREY_DARKEN_3" />

				<m.ext:MaterialButton2 ui:field="chatButton"
					iconType="CHAT" iconColor="ORANGE_LIGHTEN_2"
					backgroundColor="WHITE" text="Chat" type="OUTLINED"
					textColor="GREY_DARKEN_3" />

				<m.ext:MaterialButton2
					ui:field="addTaskButton" iconType="PLAYLIST_ADD"
					iconColor="TEAL_LIGHTEN_2" backgroundColor="WHITE" text="Feladat"
					type="OUTLINED" textColor="GREY_DARKEN_3" />

				<m.ext:MaterialButton2 ui:field="oooButton"
					iconType="SETTINGS" iconColor="GREY_DARKEN_4"
					backgroundColor="WHITE" visible="false" text="OOO" type="OUTLINED"
					textColor="GREY_DARKEN_3" />

				<m.ext:MaterialButton2 ui:field="oosButton"
					iconType="WARNING" iconColor="PURPLE_LIGHTEN_2"
					backgroundColor="WHITE" visible="false" text="OOS" type="OUTLINED"
					textColor="GREY_DARKEN_3" />

				<m.ext:MaterialButton2 ui:field="showButton"
					iconType="REMOVE_RED_EYE" iconColor="AMBER_LIGHTEN_2"
					backgroundColor="WHITE" visible="false" text="Show Room"
					type="OUTLINED" textColor="GREY_DARKEN_3" />
			</m:MaterialRow>
		</ma:overlay.MaterialOverlay>
	</g:HTMLPanel>
</ui:UiBinder> 