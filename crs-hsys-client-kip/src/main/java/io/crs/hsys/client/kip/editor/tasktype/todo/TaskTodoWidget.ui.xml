<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">

	<ui:style gss="true">
	@media screen and (max-width: 600px) {
		.itemStyle {
			padding-left: 10px !important;
			padding-right: 0px !important;
		}
	}
	</ui:style>

	<m:MaterialCollectionItem type="CHECKBOX"
		waves="DEFAULT" addStyleNames="{style.itemStyle}">
		<m:MaterialLabel ui:field="label" />
		<m:MaterialCollectionSecondary
			ui:field="mcs">
			<m:MaterialCheckBox ui:field="checkBox"
				value="false" type="FILLED" />
		</m:MaterialCollectionSecondary>
	</m:MaterialCollectionItem>
</ui:UiBinder> 