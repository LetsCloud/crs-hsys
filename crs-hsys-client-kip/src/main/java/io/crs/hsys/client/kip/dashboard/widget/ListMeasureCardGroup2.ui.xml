<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:m.html="urn:import:gwt.material.design.client.ui.html">

	<ui:style>
	.basePanel {
		margin-top: 20px;
		margin-bottom: 15px;
		border-left: 2px solid #2196f3;
	}
	
	.titleStyle {
		margin-top: 5px;
	}
	
	.titleRow {
		font-weight: bold;
		margin-bottom: 5px !important;
	}
	
	.valueStyle {
		text-align: center;
	}
	
	.devider {
		margin-left: 5px;
		padding-left: 5px;
		padding-top: 5px;
		border-top: 1px solid #e0e0e0;
	}
	
	.listPanel {
		
	}
	/* Add CSS here. See the GWT docs on UI Binder for more details */
	</ui:style>

	<m:MaterialColumn ui:field="basePanel" grid="s12 m6 l6">
		<m:MaterialPanel addStyleNames="{style.basePanel}">
			<m:MaterialRow addStyleNames="{style.titleRow}">
				<m:MaterialColumn grid="s6">
					<g:Label ui:field="title"
						addStyleNames="{style.titleStyle}" />
				</m:MaterialColumn>
				<m:MaterialColumn grid="s3">
					<!-- <g:Label ui:field="value" addStyleNames="{style.valueStyle}" /> -->
					<m:MaterialButton ui:field="value"
						textColor="BLACK" type="FLAT" waves="DEFAULT"
						backgroundColor="WHITE" width="40px" textAlign="CENTER"
						padding="0" />
				</m:MaterialColumn>
				<m:MaterialColumn grid="s3">
					<m:MaterialButton ui:field="value2"
						textColor="RED" type="FLAT" waves="DEFAULT"
						backgroundColor="WHITE" width="40px" textAlign="CENTER"
						padding="0" />
				</m:MaterialColumn>
			</m:MaterialRow>

			<m.html:Div addStyleNames="{style.devider}" />

			<m.html:Div ui:field="listPanel"
				addStyleNames="{style.listPanel}" />
		</m:MaterialPanel>
	</m:MaterialColumn>
</ui:UiBinder> 