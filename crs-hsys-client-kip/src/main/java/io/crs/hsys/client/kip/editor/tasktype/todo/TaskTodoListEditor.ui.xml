<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">

	<ui:with field="i18nCore"
		type="io.crs.hsys.client.core.i18n.CoreMessages" />

	<g:HTMLPanel>
		<m:MaterialRow marginBottom="0">
			<m:MaterialLabel
				text="{i18nCore.taskTypeEditorTodos}" addStyleNames="dataGroupTitle"
				float="LEFT" />
			<m:MaterialIcon ui:field="moveDown"
				iconType="ARROW_DOWNWARD" float="RIGHT" marginRight="15" />
			<m:MaterialIcon ui:field="moveUp"
				iconType="ARROW_UPWARD" float="RIGHT" />
		</m:MaterialRow>

		<m:MaterialCollection ui:field="listPanel" />
		<m:MaterialButton ui:field="deleteButton"
			text="{i18nCore.taskTypeEditorDeleteTodo}" waves="DEFAULT"
			backgroundColor="WHITE" textColor="BLACK" />
		<m:MaterialButton ui:field="addButton"
			text="{i18nCore.taskTypeEditorAddTodo}" waves="DEFAULT"
			backgroundColor="WHITE" textColor="BLACK" float="RIGHT" />
	</g:HTMLPanel>
</ui:UiBinder> 