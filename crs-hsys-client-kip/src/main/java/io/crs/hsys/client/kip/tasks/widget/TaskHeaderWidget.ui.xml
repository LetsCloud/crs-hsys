<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">

	<ui:style
		type="io.crs.hsys.client.kip.tasks.widget.TaskHeaderWidget.MyStyle">
		.titleStyle {
			/* margin-top: 10px; */ /*			margin-right: 5px; */ /*			float: left; */
			/*			line-height: 1rem; */ /*			display: inline-block; */
			
		}
		
		.badgeStyle {
			/*		margin-bottom: 10px; */ /*		margin-left: 5px; */
			margin-top: 5px;
			margin-right: 5px;
			padding: 5px;
			line-height: 2rem;
			border-radius: 5px;
			float: left;
		}
		
		.floatLeft {
			float: left;
		}
		
		.floatRight {
			float: right;
			display: inline-block;
		}
		
		.boxEnd {
			display: flow-root;
			clear: both;
		}
		
		.noMargins {
			margin: 0;
		}
		
		.lineThrough {
			text-decoration: line-through;
		}
		
		.noStrech {
			align-self: flex-start;
			overflow: visible;
			margin-right: 10px;
			/*			height: 42px !important;
															width: 42px !important;*/
		}
		
		.flexBox {
			display: flex;
		}
		</ui:style>

	<g:HTMLPanel>
		<m:MaterialRow margin="0" paddingTop="10">
			<m:MaterialColumn grid="s11" margin="0" padding="0">
				<m:MaterialRow margin="0" padding="0">
					<m:MaterialColumn grid="s12 m6" margin="0"
						padding="0">
						<m:MaterialIcon ui:field="taskKind" float="LEFT" />

						<m:MaterialLabel ui:field="title" float="LEFT" />
					</m:MaterialColumn>

					<m:MaterialColumn grid="s12 m6" margin="0"
						padding="0" addStyleNames="{style.flexBox}">

						<g:HTMLPanel ui:field="taskLine" />
					</m:MaterialColumn>

				</m:MaterialRow>
			</m:MaterialColumn>

			<m:MaterialColumn grid="s1" margin="0" padding="0">
				<m:MaterialIcon ui:field="menuIcon"
					iconType="MORE_VERT" float="RIGHT" waves="DEFAULT" circle="true"
					activates="dp-3" marginLeft="0" marginRight="0" />

				<!-- My Drop Down -->
				<m:MaterialDropDown ui:field="menuDropDown"
					activator="dp-3" constrainWidth="false" />
			</m:MaterialColumn>
		</m:MaterialRow>

		<m:MaterialRow margin="0">
			<m:MaterialColumn grid="s6" margin="0" padding="0">
				<m:MaterialIcon ui:field="taskStatus" marginTop="5"
					float="LEFT" />
				<m:MaterialLabel ui:field="desde" marginTop="5"
					float="LEFT" />
			</m:MaterialColumn>

			<m:MaterialColumn grid="s6" margin="0" padding="0">
				<!-- <g:Label ui:field="dueDate" text="Due: 2018.06.01." addStyleNames="{style.floatRight}" 
					/> -->
				<m:MaterialLink ui:field="dueDate" text="2018.06.01."
					iconType="EVENT" iconPosition="LEFT" float="RIGHT"
					textColor="GREY_DARKEN_2" marginTop="5" fontSize="16px" />
			</m:MaterialColumn>
		</m:MaterialRow>
	</g:HTMLPanel>
</ui:UiBinder> 